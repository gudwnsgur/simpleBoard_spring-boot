<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.dku.simpleBoard.mapper.UserMapper">
    <!--
    <resultMap id="userMap" type="com.dku.simpleBoard.dto.UserDTO">
        <result column="user_id" property="userId"/>
        <result column="user_pwd" property="userPwd"/>
        <result column="user_name" property="userName"/>
        <result column="user_email" property="userEmail"/>
        <result column="user_tel" property="userTell"/>
    </resultMap>
    -->
    <select id="getUserList" resultType="UserDTO">
        SELECT user_name AS userName, user_tell as userTell  FROM users;
    </select>

    <insert id="insertUser" parameterType="UserDTO">
        INSERT INTO users (user_id , user_pwd ,
                        user_name , user_email ,
                         user_tell , user_auth)
        VALUES (${userId}, ${userPwd}, ${userName}, ${userEmail}, ${userTell}, 0);
    </insert>
</mapper>

